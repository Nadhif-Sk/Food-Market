<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:layout_marginTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="26dp"
    android:orientation="vertical"
    tools:context=".ui.auth.signin.SigninFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="16sp"
        android:textColor="#020202"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your email address"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="#8D92A3"
        android:fontFamily="@font/poppins"
        android:background="@drawable/shape_rectangle_outline_8_020202"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="#020202"
        android:fontFamily="@font/poppins"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Type your password"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="#8D92A3"
        android:fontFamily="@font/poppins"
        android:background="@drawable/shape_rectangle_outline_8_020202"/>

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sign In"
        android:textColor="#020202"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:background="@drawable/shape_rectangle_8_ffc700"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:background="@drawable/shape_rectangle_8_8d92a3"/>

</LinearLayout>